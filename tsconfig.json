{
	"compilerOptions": {
		"target": "es5",
		"module": "none",
		"outFile": "./dist/bundle.js",
		"sourceMap": false,
		"strict": true,
		"noImplicitAny": false,
		"removeComments": true,
		"lib": [
			"es2017",
			"es5",
			"es2015",
			"dom",
			"es2015.collection"
		],
		"declaration": false,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}